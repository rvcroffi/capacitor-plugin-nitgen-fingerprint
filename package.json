{
  "name": "capacitor-plugin-nitgen-fingerprint",
  "version": "8.0.0",
  "description": "Capacitor plugin for Nitgen fingerprint devices.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "android/lib/",
    "dist/"
  ],
  "author": "Rafael Vianna Croffi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rvcroffi/capacitor-plugin-nitgen-fingerprint.git.git"
  },
  "bugs": {
    "url": "https://github.com/rvcroffi/capacitor-plugin-nitgen-fingerprint.git/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "nitgen",
    "fingerprint"
  ],
  "scripts": {
    "verify": "npm run verify:android && npm run verify:web",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "docgen": "docgen --api FingerprintPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "release": "np --no-tests"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/docgen": "^0.3.1",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "husky": "8.0.3",
    "np": "10.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-java": "^2.7.7",
    "pretty-quick": "^3.1.3",
    "rimraf": "^6.1.0",
    "rollup": "^4.53.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@capacitor/core": ">=8.0.0"
  },
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "np": {
    "yarn": false,
    "contents": ".",
    "branch": "main",
    "tests": false,
    "message": "bump to %s"
  },
  "capacitor": {
    "android": {
      "src": "android"
    }
  }
}
